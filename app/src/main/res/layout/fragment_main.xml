            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/iconmaindesign"
                app:layout_constraintLeft_toRightOf="@id/guidlineConstrainIchi"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/giveny"
                android:gravity="center"
                android:padding="15dp"
                android:text="% ga % soat % daqiqa qoldi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guidlineConstrainIchi"
                app:layout_constraintTop_toBottomOf="@id/guidlineConstrainIchiHorizantal" />

