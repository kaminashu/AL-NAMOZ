                    android:fontFamily="@font/giveny"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text=""
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/peshinguidelineItem2"
                    app:layout_constraintRight_toLeftOf="@id/peshinguidelineItem3"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/namazPeshinAudio"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="10dp"
                    android:src="@drawable/sound"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/peshinguidelineItem3"
