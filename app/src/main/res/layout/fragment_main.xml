                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Peshin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/peshinguidelineItem1"
                    app:layout_constraintRight_toLeftOf="@id/peshinguidelineItem2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
